<UserControl x:Class="ElkCSharp.ucLEDSimple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElkCSharp"
             mc:Ignorable="d" 
             Background="Transparent"
             xmlns:viewmodel="clr-namespace:ElkCSharp.ViewModel"
             >
    <Viewbox Stretch="Uniform" StretchDirection="Both" MaxHeight="400" MaxWidth="400">
        <Grid>
            <Border                
                    Grid.Column="1" 
                    CornerRadius="20"
                    BorderBrush="{StaticResource Retro_Brush_Label}"
                    BorderThickness="1"
                    Background="Black"
                    >
                <Ellipse
                x:Name="ellLED"
                Fill="{StaticResource Retro_Brush_LED}" 
                Margin="2,2,2,2" 
                Width="16" 
                Height="16" />
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
